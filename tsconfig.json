{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
    }
    // "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
